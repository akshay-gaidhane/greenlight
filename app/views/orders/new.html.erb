<div class="container">
  <div class="row pt-7">
    <div class="col col-lg-6 offset-lg-3">
      <div class="card">
        <div class="card-header background">
          <h4 class="mt-2">Order details</h4>
        </div>
        <div class="card-body background">
          <%= form_for @order, :url => orders_path() do |f|  %>
            <% if @order.express_token.blank? %>
              <div class="form-group">
                <%= f.label t("first_name"), class: "form-label" %>
                <%= f.text_field :first_name, class: "form-control ", placeholder: t("first_name") %>
              </div>
              <div class="form-group">
                <%= f.label t("last_name"), class: "form-label" %>
                <%= f.text_field :last_name, class: "form-control ", placeholder: t("last_name") %>
              </div>
              <div class="form-group">
                <%= f.label t("card_type"), class: "form-label" %>
                <%= f.select :card_type, [["Visa", "visa"], ["MasterCard", "master"], ["Discover", "discover"], ["American Express", "american_express"]], class: "form-control " %>
              </div>
              <div class="form-group">
                <%= f.label t("card_number"), class: "form-label" %>
                <%= f.text_field :card_number, class: "form-control ", placeholder: t("card_number") %>
              </div>
              <div class="form-group">
                <%= f.label t("card_verification"), class: "form-label" %>
                <%= f.text_field :card_verification, class: "form-control ", placeholder: t("card_verification") %>
              </div>
              <div class="form-group">
                <%= f.label t("card_expires_on"), class: "form-label" %>
                <%= f.date_select :card_expires_on, :discard_day => true, :start_year => Date.today.year, :end_year => (Date.today.year+10), :add_month_numbers => true, class: "form-control " %>
              </div>
            <% else %>
              <%= f.hidden_field :express_token %>
              <%= hidden_field_tag :room_uid, current_user.main_room.uid %>
              <%= current_user.name %></br>
              <%= current_user.email %></br>
              <%= t("#{@order.first_name }") %><%= t("#{@order.last_name }") %>
            <% end %>
            <div class="card-footer px-0 pb-0">
              <%= f.submit "Submit", class:"btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>